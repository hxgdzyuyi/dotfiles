[alias]
  st = status -bs
  dc = diff --cached
  ca = commit -av
  amend = commit --amend -C HEAD
  rv = checkout HEAD --force --
  ff = merge --ff-only
  graf = log --graph --oneline --decorate
  nb = checkout --track HEAD -b
  tip = log -1 --stat
  sw = checkout
  co = checkout
  rh = reset --hard
  ph = push origin HEAD

